<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aaa.politindex">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main_screen.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.AuthActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".authentication.AuthPhoneActivity"
            android:screenOrientation="portrait">
            android:windowSoftInputMode="adjustResize"
        </activity>
        <activity
            android:name=".authentication.SendSmsActivity"
            android:screenOrientation="portrait">
            android:windowSoftInputMode="adjustResize"
        </activity>
        <activity
            android:name=".main_screen_for_auth_user.MainAuthUserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".search_by_figures.SearchByFiguresActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".figure_main_screen.FigureMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user_profile.UserProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".date_information_activity.DateInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".time_line_info_activity.TimeLineActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".biography_activity.BiographyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".locale.LocaleActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>